<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time : 15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.087" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="121dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toTopOf="@+id/txtScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/kennyImage1"
            android:layout_width="94dp"
            android:layout_height="154dp"
            android:onClick="increaseScore"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/kedi" />

        <ImageView
            android:id="@+id/kennyImage2"
            android:layout_width="94dp"
            android:layout_height="154dp"
            android:onClick="increaseScore"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/kedi" />

        <ImageView
            android:id="@+id/kennyImage3"
            android:layout_width="94dp"
            android:layout_height="154dp"
            android:onClick="increaseScore"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/kedi" />

        <ImageView
            android:id="@+id/kennyImage4"
            android:layout_width="94dp"
            android:layout_height="154dp"
            android:onClick="increaseScore"
            app:layout_column="3"
            app:layout_row="0"
            app:srcCompat="@drawable/kedi" />


        <ImageView
            android:id="@+id/kennyImage5"
            android:layout_width="94dp"
            android:layout_height="154dp"
            android:onClick="increaseScore"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/kedi" />

        <ImageView
            android:id="@+id/kennyImage6"
            android:layout_width="94dp"
            android:layout_height="154dp"
            android:onClick="increaseScore"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/kedi" />

        <ImageView
            android:id="@+id/kennyImage7"
            android:layout_width="94dp"
            android:layout_height="154dp"
            android:onClick="increaseScore"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/kedi" />

        <ImageView
            android:id="@+id/kennyImage8"
            android:layout_width="94dp"
            android:layout_height="154dp"
            android:onClick="increaseScore"
            app:layout_column="3"
            app:layout_row="1"
            app:srcCompat="@drawable/kedi" />


        <ImageView
            android:id="@+id/kennyImage9"
            android:layout_width="94dp"
            android:layout_height="154dp"
            android:onClick="increaseScore"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/kedi" />

        <ImageView
            android:id="@+id/kennyImage10"
            android:layout_width="94dp"
            android:layout_height="154dp"
            android:onClick="increaseScore"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/kedi" />

        <ImageView
            android:id="@+id/kennyImage11"
            android:layout_width="94dp"
            android:layout_height="154dp"
            android:onClick="increaseScore"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/kedi" />

        <ImageView
            android:id="@+id/kennyImage12"
            android:layout_width="94dp"
            android:layout_height="154dp"
            android:onClick="increaseScore"
            app:layout_column="3"
            app:layout_row="2"
            app:srcCompat="@drawable/kedi" />
    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/txtScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp"
        android:text="Score :0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>